<% layout('./layout/app') -%>
<div class="row">
    <div class="col-md-5 mt-3">
        <button type="button" class="btn btn-primary">
            Download CSV
        </button>
    </div>
    <div class="col-md-7 mt-3">
        <div class="col-md-5 float-left">
            <input type="text" class="form-control" placeholder="Enter event id here" id="singleEventInput" style="min-width:200px;">
        </div>
        <button class="btn btn-primary" id="SaveSingleEvent">Add New Event</button>
        <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#uploadModal">Upload
            events from csv</button>
    </div>
</div>
<hr style="margin-top: 50px;">
<div class="row mt-3">
    <div class="col-md-4 mt-3">
        <p class="mt-3 mb-3"><b>Events</b></p>
        <table id="eventTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <th class="th-sm">No
                </th>
                <th class="th-sm">EventID
                </th>
                <th class="th-sm">
                    Action
                </th>
            </thead>
            <tbody>
                <% for(let i = 0; i < events.length; i++) { let event = events[i]; %>
                <tr>
                    <td>
                        <%=i+1%>
                    </td>
                    <td>
                        <%=event.eventID%>
                    </td>
                    <td>
                        <button class="btn btn-success" title="View Details" onclick="viewEventDetails('<%=event.eventID%>')"><i
                                class="fas fa-align-justify"></i></button>
                        <button class="btn btn-danger" onclick="removeEvent('<%=event.eventID%>')" title="Delete"><i
                                class="far fa-trash-alt"></i></button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="col-md-8 mt-3">
        <div class="col-md-12">
            <div class="event-img-dev">
                <img src="" alt="" id="event-img">
            </div>
            <div class="">
                <p id="event-name"></p>
                <p id="event-address"></p>
                <p id="event-date"></p>
            </div>
        </div>
        <div class="col-md-12" id="ticketDetails-div" style="display:none;">
            <p class="mt-5 mb-3"><b>Tickets</b></p>
            <table id="ticketTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <th class="th-sm">No</th>
                    <th class="th-sm">Date</th>
                    <th class="th-sm">TotalListings</th>
                    <th class="th-sm">TotalTickets</th>
                    <th class="th-sm">Min</th>
                    <th class="th-sm">Max</th>
                    <th class="th-sm">Average</th>
                    <th class="th-sm">Median</th>
                    <th class="th-sm">
                        Action
                    </th>
                </thead>
                <tbody id="ticketTable-body">
                </tbody>
            </table>
        </div>
        <div class="col-md-12" id="seatDetails-div" style="display:none;">
            <p class="mt-5 mb-3"><b>Seats</b></p>
            <table id="seatTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <th class="th-sm">No</th>
                    <th class="th-sm">Price</th>
                    <th class="th-sm">Quantity</th>
                    <th class="th-sm">DeliveryMethodList</th>
                </thead>
                <tbody id="seatTable-body">
                </tbody>
            </table>
        </div>
    </div>

</div>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModal" aria-hidden="true">
    <form action="/events/uploadcsv" method="POST" enctype="multipart/form-data" onsubmit="showloading();$('#uploadModal').modal('toggle');">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Upload events from csv</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <label for="filter">Select File</label>
                            <input type="file" name="file" class="form-control" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
                                required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script>
    $(function () {
        $('#eventTable').DataTable({ responsive: true });
        $('#downloadCSV').click(function () {
            let data = { names: $('#filter').val() };
            showloading();
            window.location.href = '/downloadcsv?filter=' + JSON.stringify(data);
            $('#filterModal').modal('toggle');
            setTimeout(() => {
                endloading();
            }, 3000);
        });

        $('#SaveSingleEvent').click(() => {

            let id = $('#singleEventInput').val();
            if (id == '' || id.length != 16) {
                $('#singleEventInput').focus();
            } else {
                showloading();
                //save event
                $.ajax({
                    url: '/addEvent',
                    method: 'POST',
                    data: {
                        eventID: id
                    },
                    success: function (res) {
                        endloading();
                        location.href = '/events';
                    }
                });
            }
        });
    })

    function removeEvent(eventID) {
        if (confirm("Are you sure to remove this event?")) {
            location.href = '/events/remove/' + eventID;
        }
    }

    function viewEventDetails(eventID) {
        $.ajax({
            url: '/viewEventDetails/' + eventID,
            method: 'GET',
            success: function (res) {
                if (res.status == 'success') {
                    $('#event-img').attr('src', res.data.image);
                    $('#event-name').html('Name: ' + res.data.name);
                    $('#event-address').html('Address: ' + res.data.venue.name + ' (' + res.data.venue.address + ', ' + res.data.venue.city + ', ' + res.data.venue.state + ', ' + res.data.venue.country + ')');
                    $('#event-date').html('Date: ' + new Date(res.data.eventDate).toLocaleString('en-US', {
                        timeZone: 'America/New_York'
                    }));
                    //get ticket details
                    $('#ticketDetails-div').attr('style', 'display: none;');
                    $("#ticketTable").dataTable().fnDestroy();
                    $.ajax({
                        url: '/viewTicketDetails/' + eventID,
                        method: 'GET',
                        success: function (res2) {
                            if (res2.status == 'success') {
                                $('#ticketDetails-div').attr('style', 'display: block;');
                                let html = '';
                                let i = 0;
                                res2.data.forEach(ticket => {
                                    i++;
                                    let row = '<tr><td>' + i + '</td><td>' + ticket.date + '</td><td>' + ticket.totalListings + '</td><td>' + ticket.totalTickets + '</td><td>' + ticket.minTicketPrice + '</td><td>' + ticket.maxTicketPrice + '</td><td>' + ticket.averageTicketPrice + '</td><td>' + ticket.medianTicketPrice + '</td><td><button class="btn btn-primary" onClick="viewSeats(' + "'" + ticket.eventID + "'" + ', ' + "'" + ticket.date + "'" + ')">View</button></td></tr>'
                                    html = html + row;
                                });
                                $('#ticketTable-body').html(html);
                                $('#ticketTable').DataTable({ responsive: true });
                            }
                        }
                    });
                }
            }
        })
    }

    function viewSeats(eventID, date) {
        $('#seatDetails-div').attr('style', 'display: none;');
        $("#seatTable").dataTable().fnDestroy();
        $.ajax({
            url: '/viewSeatDetails',
            method: 'POST',
            data: {
                eventID,
                date
            },
            success: function (res) {
                if (res.status == 'success') {
                    $('#seatDetails-div').attr('style', 'display: block;');
                    let html = '';
                    let i = 0;
                    res.data.forEach(seat => {
                        i++;
                        let row = '<tr><td>' + i + '</td><td>' + seat.price + '</td><td>' + seat.quantity + '</td><td>' + seat.deliveryMethodList + '</td></tr>';
                        html = html + row;
                    });
                    $('#seatTable-body').html(html);
                    $('#seatTable').DataTable({ responsive: true });
                }
            }
        })
    }

</script>